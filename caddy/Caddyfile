{$DOMAIN_NAME} {
    tls {$TLS_EMAIL}

    basicauth bcrypt rutorrent {
        import /etc/caddyusers/users
    }

    encode {
        gzip
        zstd
    }

    log {
        output file /log/access.log {
            roll_size 1gb
            roll_keep 5
            roll_keep_for 720h
        }
    }     

    root * {$PHP_APP_DIR}
    file_server

    php_fastcgi php:9000 {
        root {$PHP_APP_DIR}
    }
}
